- content_for :title, "Forgot your password?"

= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'form-vertical' }) do |f|
  = devise_error_messages!

  = f.input :login, :autofocus => true, :label => 'Login name or email address'
  = f.button :submit, "Send me reset password instructions", :class => 'btn btn-default'

= render "devise/shared/links"
