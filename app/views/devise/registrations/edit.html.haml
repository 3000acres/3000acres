%h2 Edit your account settings
= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => 'form-vertical' }) do |f|
  = f.error_notification
  = display_base_errors resource
  = f.input :email, :required => true
  = f.input :newsletter, :as => :boolean, :hint => "Subscribe to the #{Acres::Application.config.site_name} newsletter. We promise we'll never spam you or sell your email address, and you can unsubscribe any time."
  %h2 Change password
  = f.input :password, :autocomplete => "off", :hint => "leave it blank if you don't want to change it", :required => false
  = f.input :password_confirmation, :required => false

  %h2 Confirm changes
  = f.input :current_password, :hint => "we need your current password to confirm your changes", :required => true
  = f.button :submit, 'Update', :class => 'btn btn-default'
%h3 Cancel my account
%p
  Unhappy? #{link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete}.
= link_to "Back", :back
