- if ! @featured_sites.nil? 
  .featured-sites
    - @featured_sites.limit(6).each do |site|
      .site.col-md-2.col-sm-4.col-xs-6
        %a{ href: "#{site_url(site)}" }
          .image.medium
            - if !site.image.blank? 
              = image_tag site.image.url(:medium)
          %h4.name
            = site.to_s
          .address
            = site.address
            = site.suburb
